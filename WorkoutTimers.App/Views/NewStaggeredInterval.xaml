<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTimers.App.Views.NewStaggeredInterval"
             Title="New Staggered Interval">
    <Grid Margin="5" RowSpacing="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Text="Name:"/>
        <Entry Grid.Column="1" Placeholder="Name" />

        <Label Text="Repititions" Grid.Row="1"/>
        <Entry Grid.Column="1" Grid.Row ="1" Placeholder="Repititions"/>
        
        <Label Text="Durations" Grid.Row="2"/>
        <Border Stroke="Grey" Grid.Row="3" Grid.Column="2">
            <CarouselView>
                
            </CarouselView>
        </Border>

        <Button Text="Add Duration" Grid.ColumnSpan="2" Grid.Row="4"/>
        <Button Text="Save" Grid.ColumnSpan="2" Grid.Row="5" HorizontalOptions="Center"/>

    </Grid>
    
    
    
